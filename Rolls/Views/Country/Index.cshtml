@model Rolls.ViewModels.IndexVM
@{
  ViewData["Title"] = "Countries";
}


<div class="pagetitle">
  <h1>Countries</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="index.html">Home</a></li>
      @*<li class="breadcrumb-item">Components</li>*@
      <li class="breadcrumb-item active">Countries</li>
    </ol>
  </nav>
</div>

<div class="row">
  <div class="col-lg-6">

    <div class="card">
      <div class="card-body">
        <h5 class="card-title"></h5>

        <!-- Default Tabs -->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active" type="button" role="tab" aria-controls="active" aria-selected="true">Active</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="deleted-tab" data-bs-toggle="tab" data-bs-target="#deleted" type="button" role="tab" aria-controls="deleted" aria-selected="false">Deleted</button>
          </li>
        </ul>
        <div class="tab-content pt-2" id="myTabContent">
          <div class="tab-pane fade show active" id="active" role="tabpanel" aria-labelledby="active-tab">
            <div class="col-12">
              <label for="txt_name" class="form-label col-form-label-sm ">Country Name</label>
              <div class="input-group">
                <input type="hidden" id="Field1" value="" />
                <input type="hidden" id="Field2" value="" />
                <input type="hidden" id="Field3" value="" />
                <form asp-action="SubmitForm">
                  @*<input type="text" id="txt_name" name="Input" data-val="true" data-val-remote="/Country/IsInputValid" data-val-remote-additionalfields="*.Input" />*@
                  @*<input type="text" id="txt_name" name="Input" data-val="true" data-val-remote="/Country/IsCountryExists" data-val-remote-additionalfields="Field1,Field2,Field3" />*@


                  <input type="text" asp-for="Input" name="Input" id="txt_name" data-val="true" data-val-remote="/Country/IsCountryExists" data-val-remote-additionalfields="Field1,Field2,Field3">
                  <span asp-validation-for="Input"></span>


                  <button type="submit">Submit</button>
                </form>


                @*<input type="text" class="form-control form-control-sm" id="txt_name">
                <span class="field-validation-valid" data-valmsg-for="txt_name" data-valmsg-replace="true"></span>*@
                <span class="input-group-btn">
                  <button type="button" id="btn_add" class="btn btn-success btn-sm"><i class="bi bi-plus-circle"></i></button>
                </span>

              </div>
            </div>
            <div class="col-12">
              <div class="container">
                <br />
                <div class="table-responsive">
                  <table id="tbl_datatable" class="table table-striped table-bordered table-sm" style="font-size: 13px; width:100%">
                    <thead class="">
                      <tr>
                        <th class="border-top-0">Country Code</th>
                        <th class="border-top-0">Name</th>
                        <th class="border-top-0"></th>

                      </tr>
                    </thead>
                    <tbody></tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <div class="tab-pane fade" id="deleted" role="tabpanel" aria-labelledby="deleted-tab">
            Nesciunt totam et. Consequuntur magnam aliquid eos nulla dolor iure eos quia. Accusantium distinctio omnis et atque fugiat. Itaque doloremque aliquid sint quasi quia distinctio similique. Voluptate nihil recusandae mollitia dolores. Ut laboriosam voluptatum dicta.
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

@section Scripts{
  @*<script src="~/js/Shared/Validation.js" defer></script>*@
  <script src="~/js/Country/Index.js" defer></script>
}